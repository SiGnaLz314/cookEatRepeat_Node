<% include global/header.ejs %>
<body>
    <div class="topnav">
        <a class="" href="/">Home</a>
        <a class="" href="/recipes/beef">Beef</a>
        <a class="" href="/recipes/chicken">Chicken</a>
        <a class="" href="/recipes/lamb">Lamb</a>
        <a class="" href="/recipes/pork">Pork</a>
        <a class="" href="/recipes/seafood">Seafood</a>
        <a class="" href="/recipes/dessert">Dessert</a>
        <a class="active" href="/addItem">Upload</a>
    </div>
    <div class="main">
        
		<h1>
            Show me your <em><strong>pics!</strong></em>
        </h1>
        <h4 id="date"></h4>
        
		<form action="/uploadItem" method="post" enctype="multipart/form-data">
			<div class="row">
        		<div class="column" align="left">
					<div>
						<label for="name">Recipe Name:</label>
						<input type="text" name="name" id="name" placeholder="Name" required>
					</div>
					<div>
						<label for="animal">Animal Type:</label>
						<select id="animal" name="animal" required>
							<option selected disabled>Choose Animal</option>
							<option>Beef</option>
							<option>Chicken</option>
							<option>Dessert</option>
							<option>Lamb</option>
							<option>Pork</option>
							<option>Seafood</option>
						</select>
					</div>
					<div>
						<label for="recipe-img">Recipe Image: (400x300)</label>
						<input type="file" name="image" id="recipe-img" required>
					</div>
					<div>
						<label for="items-img">Items Needed Image: (Placeholder_recipe.jpg)</label>
						<input type="file" name="items" id="items-img" required>
					</div>
				</div>
		
				<div class="column">
					<div>
						<label for="variables">Variables:</label><br>
						<textarea name="variables" rows="10" cols="50" placeholder="Variables"></textarea>
					</div>
					<div>
						<label for="algorithm">Algorithm:</label><br>
						<textarea name="algorithm" rows="10" cols="50" placeholder="Algorithm"></textarea>
					</div>
				</div>
			
			</div>
			<button type="submit">Add Recipe</button>
		</form>
    
	</div>
</body>
</html>

